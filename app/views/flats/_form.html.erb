<%= form_for(flat) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :price_per_night %>
    <%= f.text_field :price_per_night %>
  </div>
  <div class="field">
    <%= f.label :number_of_guests %>
    <%= f.text_field :number_of_guests %>
  </div>
  <div class="field">
    <%= f.label :number_of_rooms %>
    <%= f.text_field :number_of_rooms %>
  </div>
  <%= f.submit %>
<% end %>
