<h1>All our Flats</h1>
<%= link_to "Create new flat", new_flat_path %>
<p>All out <%= @flats.count %> flats</p>
<div class="container">
  <% @flats.each do |flat| %>
    <div class="card">
      <h3><%= flat.name %></h3>
      <p><%= flat.address %></p>
      <div class="info">
        <p>💁<%= flat.number_of_guests %></p>
        <p>💲<%= flat.price_per_night %></p>
        <p>🛌<%= flat.number_of_rooms %></p>
      </div>
      <%= link_to "More info", flat_path(flat) %>
    </div>
  <% end %>
</div>
