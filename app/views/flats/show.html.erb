<h1><%= @flat.name %></h1>
<h2><%= @flat.address %></h2>
<p>A bit more about this flat...
  <%= @flat.description %></p>
<div class="more-info">
  <p><strong>Details</strong></p>
  <p>💁<%= @flat.number_of_guests %></p>
  <p>💲<%= @flat.price_per_night %></p>
  <p>🛌<%= @flat.number_of_rooms %></p>
</div>

<div class="links">
  <%= link_to "Back to all flats", flats_path %> <br>
  <%= link_to "Edit this flat", edit_flat_path(@flat) %><br>
  <%= link_to "Delete this flat", flat_path(@flat), method: :delete, data: { confirm: "Are you sure?" }  %>
</div>
