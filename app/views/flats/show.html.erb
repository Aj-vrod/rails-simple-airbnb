<h1><%= @flat.name %></h1>
<h2><%= @flat.address %></h2>
<h3>A bit more about this flat...</h3>
<p><%= @flat.description %></p>
<div class="more-info">
  <h4><strong>Details</strong></h4>
  <p>💁 Number of guests<%= @flat.number_of_guests %></p>
  <p>💲Price <%= @flat.price_per_night %>€/day</p>
  <p>🛌 Number of rooms<%= @flat.number_of_rooms %></p>
</div>

<div class="links">
  <%= link_to "Back to all flats", flats_path %> <br>
  <%= link_to "Edit this flat", edit_flat_path(@flat) %><br>
  <%= link_to "Delete this flat", flat_path(@flat), method: :delete, data: { confirm: "Are you sure?" }  %>
</div>
